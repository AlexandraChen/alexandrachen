<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
  <h2>Add Post</h2>
    <%= form_for @post do |f| %>
      <%= f.label "Product picture" %>
      <%= f.label "Title" %>
      <%= f.text_field :title, class: "form-control", placeholder:"title" %>
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control", placeholder: "Content"%>
      <%= f.label "Date" %>
      <%= f.date_field :published_date, class: "form-control", placeholder: :date %>
      <br>
      <%= f.submit "Add post", class: "btn btn-default col-sm-12"%>
    <% end %>
  </div>
</div>